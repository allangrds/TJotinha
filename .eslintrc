{
  "parser": "babel-eslint",
  "extends": "pagarme-base",
  "env": {
    "jest": true
  },
  "rules": {
    "max-len": [
      "error",
      {
        "code": 80
      }
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ]
  }
}
